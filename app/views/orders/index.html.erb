<% if session[:user_id] %>
<h1>Your Order history</h1>

<table>
  <tr>
    <th>Delivery date</th>
    <th>Delivery address</th>
    <th>Detail</th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.delivery_date %></td>
    <td><%= order.addr %></td>
    <td><%= order.detail %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>

<% else %>
    <li><%= link_to "Please Sign Up to make a reservation!", new_user_url %></li>
    <li><%= link_to "If you have an account, please sign in", sign_in_url %></li>
<% end %>
