<!DOCTYPE html>
<html>
<head>
  <title>CsppMenu</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="http://bootswatch.com/amelia/bootstrap.min.css">
  <style type="text/css">
    body { padding-top: 60px; padding-bottom: 40px; }
  </style>
  <link href="http://twitter.github.com/bootstrap/assets/css/bootstrap-responsive.css" rel="stylesheet">
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand span2" href="/">Bon Jour</a>
        <div class="nav-collapse">
          <ul class="nav pull-right">
<% if session[:user_id] %>
              <li><%= link_to "My Profile", user_url(session[:user_id]) %></li>
              <li><%= link_to "Sign Out", sign_out_url %></li>
            <% else %>
              <li><%= link_to "Sign Me Up!", new_user_url %></li>
              <li><%= link_to "Sign In", sign_in_url %></li>
            <% end %>
            <li><%= link_to "Menu" , dishes_url %></li>
            <li><%= link_to "Location", location_url%></li>
            <li><%= link_to "Reservations", reservations_url%></li>
            <li><%= link_to "Online Ordering", orders_url %></li>
            <li><%= link_to "Help", help_url %></li>
            <li><%= link_to "Admin_Panel", admin_url %></li>
            <li><%= link_to "Soup.d.jour(Admin only)", soupdejours_url %></li>
            </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>
  <div class="container">
    <%= notice %>
<%= yield %>
  </div>
</body>
</html>
